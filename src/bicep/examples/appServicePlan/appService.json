          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.4.613.9944",
              "templateHash": "16539334076329566072"
            }
          },
          "parameters": {
            "svcPlanName": {
              "type": "string"
            },
            "svcPlanNameID": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "minimumCapacity": {
              "type": "int",
              "defaultValue": 2,
